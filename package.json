{
  "name": "pxw-vscode-webpack",
  "displayName": "pxw-vscode-webpack",
  "description": "PXW cross reference tools for vscode",
  "publisher": "pxw-paul",
  "version": "0.0.7",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "intersystems",
    "objectscript"
  ],
  "activationEvents": [
    "onLanguage:objectscript-class"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": [
      {
        "id":"PXWXrefTools",
        "title": "PXW Xref tools",
        "type":"object",
        "properties":{
          "pxw.xref.connection": {
            "type":"object",
            "description": "The connection for the Xref tools. This is the server where pxw-dev is installed.",
            "properties": {
              "scheme": {
                "type":"string",
                "description": "https/http"
              },
              "host": {
                "type":"string",
                "description": "Host"
              },
              "port": {
                "type":"integer",
                "description": "Port"
              },
              "namespace": {
                "type":"string",
                "description": "Namespace"
              },
              "username":{
                "type":"string",
                "description": "Username"
              },
              "password": {
                "type":"string",
                "description": "Password"
              }
            }
          },
          "pxw.xref.showOverrides": {
            "type":"boolean",
            "description": "Show the link to a superclass method that has been overridden.",
            "default":true
          },
          "pxw.xref.showOverridden": {
            "type":"boolean",
            "description": "Show count of how many times the method has been overridden in subclasses.",
            "default":true
          },
          "pxw.xref.showXref": {
            "type":"boolean",
            "description": "Show count of how many times the method has been referenced.",
            "default":true
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
